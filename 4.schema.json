{
    "$schema": "https://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string",
            "pattern": "4\\.schema\\.json$"
        },
        "load": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string"
            }
        },
        "posts": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["text", "date"],
                "properties": {
                    "text": {
                        "type": "string",
                        "minLength": 1
                    },
                    "date": {
                        "type": "string",
                        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
                    },
                    "longread": {
                        "type": "string",
                        "minLength": 1
                    }
                }
            }
        }
    }
}